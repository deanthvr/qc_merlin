<Window x:Class="Merlin.TubeImport.TubeDatabaseImporter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="..\Resources\Sample Logo\merlin-light-blue-no-text.ico"
        ResizeMode="NoResize" ContentRendered="windowContent_Rendered"
        Title="Importing Data..." Height="130" Width="600" ShowInTaskbar="True" 
        WindowStartupLocation="Manual" Left="110" Top="25">
  <Grid>
    <StackPanel Orientation="Vertical">
      <TextBlock x:Name="dataSourceTextBlock" Text="Data Source: ?????" Height="15" HorizontalAlignment="Right" Style="{DynamicResource SectionHelpers}" ToolTip="Please visit Settings to change the data source" Margin="2,2,10,2"/>
      <ProgressBar x:Name="progressBar" Minimum="0" Height="40" Margin="10,0,10,0"/>
      <TextBlock x:Name="fileBlock" Width="570" Height="32" Margin="10,10,10,0"/>
    </StackPanel>
  </Grid>
</Window>
