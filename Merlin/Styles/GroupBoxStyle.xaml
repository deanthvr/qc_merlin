<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="GroupBoxStyleBase" TargetType="{x:Type GroupBox}">
    <Setter Property="HeaderTemplate">
      <Setter.Value>
        <DataTemplate>
          <TextBlock Text="{Binding}" Foreground="{DynamicResource SectionHeaderFontColor}" FontSize="16"/>
        </DataTemplate>
      </Setter.Value>
    </Setter>
  </Style>

