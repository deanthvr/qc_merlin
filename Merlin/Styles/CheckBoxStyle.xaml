<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="rotateWindowApproachHeaders" TargetType="{x:Type CheckBox}">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="IsThreeState" Value="True"></Setter>
  </Style>
  <Style x:Key="rotateWindowMovements" TargetType="{x:Type CheckBox}">
    <Setter Property="FontSize" Value="10"/>
    <Setter Property="LayoutTransform">
      <Setter.Value>
        <ScaleTransform ScaleX="0.9" ScaleY="0.9" />
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="singleFileImportWindowApproachHeaders" TargetType="{x:Type CheckBox}">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="IsThreeState" Value="True"></Setter>
  </Style>
  <Style x:Key="singleFileImportWindowMovements" TargetType="{x:Type CheckBox}">
    <Setter Property="FontSize" Value="10"/>
    <Setter Property="LayoutTransform">
      <Setter.Value>
        <ScaleTransform ScaleX="0.9" ScaleY="0.9" />
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>