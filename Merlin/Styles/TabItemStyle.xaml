<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="SmallTabItemStyle" TargetType="{x:Type TabItem}">
    <Setter Property="Height" Value="24" />
    <Setter Property="Width" Value="60"/>
  </Style>

  <Style x:Key="LargeTabItemStyle" TargetType="{x:Type TabItem}">
    <Setter Property="Height" Value="32" />
    <Setter Property="Width" Value="150"/>
  </Style>

  <Style x:Key="SmallTabItemLabel" TargetType="{x:Type Label}">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="Normal"/>
    <Setter Property="Padding" Value="0"/>
  </Style>

  <Style x:Key="LargeTabItemLabel" TargetType="{x:Type Label}">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="DemiBold"/>
  </Style>

</ResourceDictionary>