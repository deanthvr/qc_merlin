<Window x:Class="Merlin.MerlinProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="Resources\Sample Logo\merlin-light-blue-no-text.ico"
        ResizeMode="NoResize" Height="125" Width="600" ShowInTaskbar="True" 
        WindowStartupLocation="Manual" Left="110" Top="25">
  <Grid>
    <StackPanel Orientation="Vertical">
      <ProgressBar x:Name="progressBar" Minimum="0" Height="40" Margin="10,10,10,0"/>
      <TextBlock x:Name="fileBlock" Width="570" Height="32" Margin="10,10,10,0"/>
    </StackPanel>
  </Grid>
</Window>